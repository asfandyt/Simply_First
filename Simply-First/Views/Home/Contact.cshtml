
@{
    ViewBag.Title = "Contact";
    ViewBag.BodyClass = "Contact";
}

<h1 class="display-4 pb-3">Contact Us!</h1>
<div class="row">
    <form class="well form-horizontal col-sm-12" action="">
        <div class="form-group row offset-md-1 offset-lg-2">
            <label for="name" class="col-sm-2 col-lg-2 col-form-label">Name</label>
            <div class="col-sm-10 col-md-8 col-lg-6 inputGroupContainer">
                <input class="form-control" type="text" placeholder="Enter your name" id="name" required />
            </div>
        </div>
        <div class="form-group row offset-md-1 offset-lg-2">
            <label for="email" class="col-sm-2 col-lg-2 col-form-label">Email</label>
            <div class="col-sm-10 col-md-8 col-lg-6 inputGroupContainer">
                <input class="form-control" type="email" placeholder="Enter your email" id="email" required />
            </div>
        </div>
        <div class="form-group row offset-md-1 offset-lg-2">
            <label for="message" class="col-sm-2 col-lg-2 col-form-label">Message</label>
            <div class="col-sm-10 col-md-8 col-lg-6 inputGroupContainer">
                <textarea class="form-control" placeholder="Enter your message" id="message" rows="5" required></textarea>
            </div>
        </div>

        <div class="form-group row offset-md-1 offset-lg-2">
            <label class="col-sm-2 col-lg-2 col-form-label"></label>
            <div class="col-sm-10 col-md-8 col-lg-6 inputGroupContainer">
                <input class="btn btn-primary" type="button" value="Submit" id="submit">
            </div>
        </div>
    </form>
</div>
