<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Simply First</title>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
    @*bootstrap3*@
    @*<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />*@
    @*<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />*@
    <link href="~/Content/sidebar.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/app.js"></script>





    @* Google Captcha *@
    <script src="https://www.google.com/recaptcha/api.js"></script>
</head>
<body>
    <nav class="navbar navbar-toggleable-md navbar-fixed-top bg-faded">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle navbar-toggler navbar-toggler-right" data-toggle="collapse" data-target=".navbar-collapse" style="border:1px solid black;">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Simply First", "SecureArea", "Accounts", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav nav-left navbar-left mr-auto">
                    <li class="nav-item">@Html.ActionLink("Home", "SecureArea", "Accounts", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Products", "Index", "Products", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Buy Product", "BuyProducts", "Users", null, new { @class = "nav-link" })</li>
                       
                </ul>

                @*<div class="col-sm-3 col-md-3">
                    <form class="navbar-form" role="search">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Enter Query" name="search">
                            <div class="input-group-btn">
                                @Html.ActionLink("Search", "Search", "Home", new { @class = "btn btn-default" })
                                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                            </div>
                        </div>
                    </form>
                </div>*@        

                <ul class="nav navbar-nav navbar-right nav-right ">
                    <li class="nav-item">
                        @{
                            if (!Request.IsAuthenticated)
                            {
                                @Html.ActionLink("Login", "Index", "Accounts", new { @class = "nav-link" })
                            }
                        }
                    </li>
                    <li class="nav-item">
                        @{
                            if (!Request.IsAuthenticated)
                            {
                                @Html.ActionLink("Register", "Register", "Accounts", new { @class = "nav-link" })
                            }
                        }
                    </li>

                    <p class="navbar-text"><strong>@Html.Raw(User.Identity.Name)</strong></p>
                    
                    <li class="nav-item">
                        @{
                            if (Request.IsAuthenticated)
                            {
                                @Html.ActionLink("Logout", "Logout", "Accounts", new { @class = "nav-link" })
                            }
                        }
                    </li>                           
                </ul>
            </div>
        </div>
    </nav>

<div class="container body-content">
    @RenderBody()
</div>


    <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
    @*bootstrap3
    <script src="~/Scripts/bootstrap.min.js"></script>*@
</body>
</html>