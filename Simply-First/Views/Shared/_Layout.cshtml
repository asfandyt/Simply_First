<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Simply First</title>
    
    @* Bootstrap 4 *@
    <link href="~/Content/Boostrap 4/boostrap.min.css" rel="stylesheet" />
    <link href="~/Content/Boostrap 4/dashboard.css" rel="stylesheet" />

    @* Bootstrap 3 *@
    @*<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />*@
    @*<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />*@

    @*<link href="~/Content/sidebar.css" rel="stylesheet" />*@

    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    
    @* Products API *@
    <script src="~/Scripts/app.js"></script>
    
    @* Google Captcha *@
    <script src="https://www.google.com/recaptcha/api.js"></script>
</head>
<body>
    <nav class="navbar navbar-toggleable-md navbar-inverse fixed-top bg-primary">
        <button class="navbar-toggler navbar-toggler-right hidden-lg-up" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        
        @*<div class="container">*@
            @Html.ActionLink("Simply First", "Index", "Home", null, new { @class = "navbar-brand" })

        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Products", "Product", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Purchase", "Purchase", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Document", "Document", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("API", "ApiDocumentation", "Home", null, new { @class = "nav-link" })</li>
            </ul>

            <ul class="navbar-nav mr-4 mt-lg-0">
                <form class="form-inline mt-2 mt-md-0">
                    <input class="form-control mr-sm-2" type="text" placeholder="Search">
                    <button class="btn btn-outline-inverse my-2 my-sm-0" type="submit">Search</button>
                </form>
            </ul>
                
            <ul class="navbar-nav">
                <li class="nav-item mr-3">@Html.ActionLink("Cart", "ViewCart", "Home", null, new { @class = "nav-link" })</li>
                @{
                    if (Request.IsAuthenticated)
                    {
                        <span class="navbar-text mr-3"><strong>[@Html.Raw(User.Identity.Name)]</strong></span>
                    }
                }      
                <li class="nav-item">
                    @{
                        if (!Request.IsAuthenticated)
                        {
                            @Html.ActionLink("Login", "Index", "Accounts", null, new {@class = "nav-link"})
                        }
                    }
                </li>
                <li class="nav-item">
                    @{
                        if (!Request.IsAuthenticated)
                        {
                            @Html.ActionLink("Register", "Register", "Accounts", null, new {@class = "nav-link"})
                        }
                    }
                </li>
                <li class="nav-item">
                    @{
                        if (Request.IsAuthenticated)
                        {
                            @Html.ActionLink("Profile", "SecureArea", "Accounts", null, new {@class = "nav-link"})
                        }
                    }
                </li>
                <li class="nav-item">
                    @{
                        if (Request.IsAuthenticated)
                        {
                            @Html.ActionLink("Logout", "Logout", "Accounts", null, new {@class = "nav-link"})
                        }
                    }
                </li>
            </ul>
        </div>
    @*</div>*@
</nav>

    <div class="container">
        <br />

        @RenderBody()
        
        <hr />

        <footer class="offset-md-1 col-md-10 offset-md-1">
            <p class="text-center">&copy; @DateTime.Now.Year - Simply First</p>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>

    @* Boostrap 3 *@
    @*@<script src="~/Scripts/bootstrap.min.js"></script>*@
</body>
</html>
