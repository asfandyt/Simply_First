@model IEnumerable<Simply_First.ViewModels.SiteUserVM>

@{
    ViewBag.Title = "Users";
}

@Html.Partial("~/Views/Sidebar/_Sidebar-top.cshtml")

<h1 class="text-center display-4 pb-3">Users List</h1>

<table class="table table-bordered">
    <tr class="bg-primary text-white">
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="email">
            @Html.DisplayFor(modelItem => item.Email, new {@Class = "email"})
        </td>
        <td class="email">
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditUserDetails", new { id = item.Id }, new { @class = "btn btn-success btn-sm" })
        </td>
        <td>
            @Html.ActionLink("Details", "UserDetails", new { id = item.Id }, new { @class = "btn btn-secondary text-muted btn-sm" })
        </td>
        <td>
            @Html.ActionLink("Delete", "DeleteUser", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>

@Html.Partial("~/Views/Sidebar/_Sidebar-bottom.cshtml")
