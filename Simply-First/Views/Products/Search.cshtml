
@model IEnumerable<Simply_First.ViewModels.Products>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("~/Views/Sidebar/_Sidebar-top.cshtml")

<h1 class="display-4 text-center pb-3">Search</h1>
<div class="row">
    <div class="col-md-6">
        <form class="form-inline pb-3" method="get" action="~/Products/Search">
            <input class="form-control mr-sm-2" type="text" placeholder="Search" name="name" />
            <input class="btn btn-secondary" type="submit" value="Search" />
        </form>
    </div>
    <div class="offset-md-4 col-md-2">
        <p>
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-lg" })
        </p>
    </div>
</div>

<table class="table table-bordered">
    <tr class="bg-inverse text-white text-center">
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Manufacturer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th class="hidden-md-up hidden-xs-up"></th>
        <th class="hidden-md-up hidden-xs-up"></th>
        <th class="hidden-md-up hidden-xs-up"></th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.ProductImage)" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ProductId }, new { @class = "btn btn-success btn-sm" })
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.ProductId }, new { @class = "btn btn-secondary text-muted btn-sm" })
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.ProductId }, new { @class = "btn btn-danger btn-sm" })
            </td>
        </tr>
    }
</table>
@Html.Partial("~/Views/Sidebar/_Sidebar-bottom.cshtml")
