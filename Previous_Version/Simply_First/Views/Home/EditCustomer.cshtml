        <h1 class="page-header">
            Edit Customer Bob's RC 
        </h1>
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-12">
                    <form id="login-form" action="~/Views/Home/Login.cshtml" method="post" role="form" style="display: block;">
                        <div class="form-group">
                            <input type="text" name="firstname" id="firstname" tabindex="1" class="form-control" placeholder="Bob" value="">
                        </div>
                        <div class="form-group">
                            <input type="text" name="lastname" id="lastname" tabindex="1" class="form-control" placeholder="Sanders" value="">
                        </div>
                        <div class="form-group">
                            <input type="text" name="company-name" id="company-name" tabindex="1" class="form-control" placeholder="Bob's RC'" value="">
                        </div>


                        <div class="form-group">
                            <input type="text" name="housenum" id="housenum" tabindex="2" class="form-control" placeholder="122">
                        </div>
                        <div class="form-group">
                            <input type="text" name="streetnum" id="streetnum" tabindex="2" class="form-control" placeholder="3254 ">
                        </div>
                        <div class="form-group">
                            <input type="text" name="address" id="address" tabindex="2" class="form-control" placeholder="Young st.">
                        </div>
                        <div class="form-group">
                            <input type="text" name="city" id="city" tabindex="2" class="form-control" placeholder="Vancouver">
                        </div>
                        <div class="form-group">
                            <input type="text" name="province" id="province" tabindex="2" class="form-control" placeholder="BC">
                        </div>
                        <div class="form-group">
                            <input type="text" name="postal-code" id="postal-code" tabindex="2" class="form-control" placeholder="V5T1R5">
                        </div>
                        <div class="form-group">
                            <input type="text" name="country" id="country" tabindex="2" class="form-control" placeholder="Canada">
                        </div>
                        <div class="form-group">
                            <input type="tel" name="phonenumber" id="phonenumber" tabindex="2" class="form-control" placeholder="778 656 7878">
                        </div>




                        <div class="form-group">
                            <input type="password" name="password" id="password" tabindex="2" class="form-control" placeholder="***********">
                        </div>
                        <div class="form-group">
                            <input type="password" name="confirm-password" id="confirm-password" tabindex="2" class="form-control" placeholder="************">
                        </div>

                        <div class="form-group text-center">

                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-6 col-sm-offset-3">
                                    <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Register">
