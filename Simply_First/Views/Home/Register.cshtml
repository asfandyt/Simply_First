
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-gray pt-120 pb-60 overflow-hidden">
    <div class="container">
        <div class="row">
            <div class="container">

                <div class="row">

                    <div class="col-md-offset-3 col-md-6 col-md-offset-3">

                        <h2 class="text-uppercase text-bold mb-40 scrolling-animation fade-up">REGISTER</h2>

                        <form class="contact-form text-dark mb-120 scrolling-animation fade-up d1" action="~/Views/Home/Login.cshtml" method="post" novalidate>

                            <div class="form-i-right">
                                <input class="form-control input-rect input-solid-white mb-20 requiredField" placeholder="First Name" type="text" name="fname">
                                <i class="fa fa-user"></i>
                            </div>

                            <div class="form-i-right">
                                <input class="form-control input-rect input-solid-white mb-20 requiredField" placeholder="Last Name" type="text" name="lname">
                                <i class="fa fa-user"></i>
                            </div>
                        
                            <div class="form-i-right">
                                <input class="form-control input-rect input-solid-white mb-20 requiredField" placeholder="Company Name" type="text" name="companyname">
                                <i class="fa fa-user"></i>
                            </div>

                            <div class="form-i-right">
                                <input class="form-control input-rect input-solid-white mb-20 requiredField" placeholder="House Number" type="text" name="housenumber">
                                <i class="fa fa-user"></i>
                            </div>     
                            
                            <div class="form-i-right">
                                <input class="form-control input-rect input-solid-white mb-20 requiredField" placeholder="Street Number" type="text" name="streetnumber">
                                <i class="fa fa-user"></i>
                            </div>        
                            
                            <div class="form-i-right">
                                <input class="form-control input-rect input-solid-white mb-20 requiredField" placeholder="Address" type="text" name="address">
                                <i class="fa fa-user"></i>
                            </div>        
                            
                            <div class="form-i-right">
                                <input class="form-control input-rect input-solid-white mb-20 requiredField" placeholder="City" type="text" name="city">
                                <i class="fa fa-user"></i>
                            </div>      
                            
                            <div class="form-i-right">
                                <input class="form-control input-rect input-solid-white mb-20 requiredField" placeholder="Province" type="text" name="province">
                                <i class="fa fa-user"></i>
                            </div>         
                            
                            <div class="form-i-right">
                                <input class="form-control input-rect input-solid-white mb-20 requiredField" placeholder="Postal Code" type="text" name="postal">
                                <i class="fa fa-user"></i>
                            </div>   
                            
                            <div class="form-i-right">
                                <input class="form-control input-rect input-solid-white mb-20 requiredField" placeholder="Province" type="text" name="province">
                                <i class="fa fa-user"></i>
                            </div>    
                            
                            <div class="form-i-right">
                                <input class="form-control input-rect input-solid-white mb-20 requiredField" placeholder="Phone Number" type="tel" name="number">
                                <i class="fa fa-user"></i>
                            </div>     

                            <div class="form-i-right">
                                <input class="form-control input-rect input-solid-white mb-20 requiredField" placeholder="Your Password" type="password" name="password">
                                <i class="fa fa-user"></i>
                            </div>

                            <div class="form-i-right">
                                <input class="form-control input-rect input-solid-white mb-20 requiredField" placeholder="Confirm Password" type="password" name="cpassword">
                                <i class="fa fa-user"></i>
                            </div>

                            <div class="form-i-right">
                                <input class="form-control input-rect input-solid-white mb-20 requiredField" placeholder="Your Email" type="email" name="email">
                                <i class="fa fa-envelope"></i>
                            </div>

                            <button type="submit" class="btn btn-block btn-rect btn-3d">Register</button>
                            <input type="hidden" name="submitted" id="submitted" value="true" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center">
    <a class="btn btn-rect btn-xl btn-block" href="http://www.dji.com/mavic" target="_blank">
        Buy DJI Mavic Now<br>
        <span class="btn-subtext">You won't regret it</span>
    </a>
</div>