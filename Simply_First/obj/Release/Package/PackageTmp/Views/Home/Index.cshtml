@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}
<style>
    section.mavic-s2 {
        position: relative;
        height: 750px;
        background-color: #000;
        background-position: center bottom;
        background-repeat: no-repeat;
        padding-top: 65px;
        font-weight: 300;
        color: #fff;
        background: -moz-linear-gradient(top,#222 0%,#000 100%);
        background: -webkit-gradient(linear,left top,left bottom,color-stop(0%,#222),color-stop(100%,#000));
        background: -webkit-linear-gradient(top,#222 0%,#000 100%);
        background: -o-linear-gradient(top,#222 0%,#000 100%);
        background: -ms-linear-gradient(top,#222 0%,#000 100%);
        background: linear-gradient(to bottom,#222 0%,#000 100%) url('http://www3.djicdn.com/assets/images/products/mavic/s2-img-v2-da1b574a4cc30a1d24f31706f6bcfbfe.png') center bottom no-repeat;
    }

        section.mavic-s2 .img-box img {
            line-height: 0;
            width: 1100px;
        }
</style>
<!-- ==============================================
        HEADER
        =============================================== -->
<header id="home" class="homepage-hero-module bg-image fixed-bg window-height overlay-on-scroll parallax-bg" data-stellar-background-ratio=".5">
    <div class="video-container">
        <div class="title-container middle-align-content">
            <div class="container text-center text-lg parallax-move-down">
                <div class="headline">
                    <h2 class="text-lg scrolling-animation fade-down d2">Take your</h2>
                    <h1 class="text-bold text-lg scrolling-animation scale-in">MAVIC</h1>
                    <p class="text-lg scrolling-animation fade-up d2">to the Next Level</p>
                </div>
            </div>
            <div class="text-center" id="loadBannerVideoSpinner" style="background-color: rgba(0, 0, 0, 0.498039); padding: 10px; border-radius: 4px; display: none; margin-top: 20px;">
                <h5 class="text-thin text-primary">Loading Coverr... <i class="fa fa-circle-o-notch fa-spin"></i></h5>
            </div>
        </div>
        <div class="filter"></div>
        <video preload="auto" autoplay="" loop="" class="fillWidth fadeIn animated" poster="https://s3-us-west-2.amazonaws.com/coverr/poster/Tropical.jpg">
            <source src="https://s3-us-west-2.amazonaws.com/coverr/mp4/Tropical.mp4" type="video/mp4">Your browser does not support the video tag. I suggest you upgrade your browser.
            <source src="https://s3-us-west-2.amazonaws.com/coverr/mp4/Tropical.mp4" type="video/webm">Your browser does not support the video tag. I suggest you upgrade your browser.
        </video>
    </div>
</header>
<div class="bg-light pt-160 pb-160">
    <div class="container">
        <div class="row">
            <div id="waypoints" class="col-sm-10 col-sm-offset-1 text-center scrolling-animation fade-up">
                <p class="text-lg-2x">
                    <sup><i class="fa fa-quote-left fa-fw text-color"></i></sup>
                    <em class="text-gray"> Every problem has a solution.</em>
                    <sup><i class="fa fa-quote-right fa-fw text-color"></i></sup>
                </p>
                <p class="text-2x"><em>You just have to be creative enough to find it.</em></p>
            </div>
        </div>
    </div>
</div>